# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.insights

GET     /register                               Register.register

GET     /create                                 Application.create
GET     /experts                                Application.experts
GET     /search                                 Application.search
GET     /profile		            			Application.profile
GET     /settings                               Application.settings

GET     /confirm/{hash}                         Register.confirm

# Insight page
GET     /insight/{<[A-Za-z0-9]+>insightUniqueId}             Application.showInsight                   

# Expert page
GET     /expert/{<[A-Za-z0-9]+>userName}        Application.showUser

# Import CRUD routes
*       /admin                                  module:crud

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
