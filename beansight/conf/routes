# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /create                                 Application.create
GET     /favorites                              Application.favorites
GET     /insights                               Application.insights
GET     /experts                                Application.experts
GET     /search                                 Application.search

# Insight page
GET     /insight/{<[0-9]+>id}                   Application.showInsight                   

# Expert page
GET     /expert/{<[0-9]+>id}                    Application.showUser

# Import CRUD routes
*       /admin              module:crud

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
